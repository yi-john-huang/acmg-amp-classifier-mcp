# Environment Variables Template for ACMG-AMP MCP Server
# Copy this file to .env and update with your actual values
# NEVER commit .env files to version control

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=acmg_amp_mcp
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your_secure_database_password_here
DATABASE_SSL_MODE=require

# PostgreSQL Docker Configuration
POSTGRES_DB=acmg_amp_mcp
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_postgres_password_here

# Server Configuration
SERVER_HOST=127.0.0.1
SERVER_PORT=8080
TLS_ENABLED=true
TLS_CERT_FILE=/path/to/cert.pem
TLS_KEY_FILE=/path/to/key.pem

# External API Keys
CLINVAR_API_KEY=your_clinvar_api_key_here
GNOMAD_API_KEY=your_gnomad_api_key_here
COSMIC_API_KEY=your_cosmic_api_key_here

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password_here

# Security Configuration
JWT_SECRET=your_jwt_secret_key_here_minimum_32_characters
ENCRYPTION_KEY=your_32_byte_encryption_key_here_exactly_32_chars
API_KEY_SALT=your_api_key_salt_here

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout

# Environment
ENVIRONMENT=development